@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="justify-content-center" style="width:100%; text-align:center;">
    <h1>@ViewData["Title"]</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" >
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" class="form-control" style="text-align:center;background-color:#f9c784;" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" style="text-align:center;background-color:#f9c784;" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary">Log in</button>

                    <div style="padding-top:20px;">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                        
                </form>
            </section>
        </div>
    
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
