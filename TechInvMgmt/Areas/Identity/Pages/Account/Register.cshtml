@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="justify-content-center" style="width:100%; text-align:center;">
    <h1>@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="background-color:#f9c784;">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" style="text-align:center;opacity:0.8;" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group" style="background-color:#f9c784;">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" style="text-align:center;opacity:0.8;" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group" style="background-color:#f9c784;">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" style="text-align:center;opacity:0.8;" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group" style="background-color:#f9c784;">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" style="text-align:center;opacity:0.8;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group" style="background-color:#f9c784;">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" style="text-align:center;opacity:0.8;" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.AccountType"></label><br />
                    <div class="btn-group btn-group-toggle" data-toggle="buttons" style="width:100%;flex-flow: wrap;">
                        <label class="btn text-light" onclick="hideSubinvSectionForISP()" style="background-color:#93b7be;">
                            <input asp-for="Input.AccountType" value="ISP" class="form-control" type="radio" autocomplete="off">ISP
                        </label>
                        <label class="btn text-light" onclick="hideSubinvSectionForFSM()" style="background-color:#a799b7;">
                            <input asp-for="Input.AccountType" value="FSM" class="form-control" type="radio" autocomplete="off">FSM
                        </label>
                        <label class="btn text-light" onclick="showSubinvSection()" style="background-color:#d36135;">
                            <input asp-for="Input.AccountType" value="Tech" class="form-control" type="radio" autocomplete="off" id="techBtn">Tech
                        </label>
                    </div>
                    <br />
                    <span asp-validation-for="Input.AccountType" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    
    </div>
</div>


<script>
    var subinvSection = document.getElementById("subinvSection");
    function showSubinvSection() {
        subinvSection.hidden = false;
        document.getElementById("subinvInput").value = "REMVAN";
        console.log(subinvSection.hidden);
    }
    function hideSubinvSectionForISP() {
        subinvSection.hidden = true;
        document.getElementById("subinvInput").value = "NONE";
        console.log(subinvSection.hidden);
    }
    function hideSubinvSectionForFSM() {
        subinvSection.hidden = true;
        document.getElementById("subinvInput").value = "NONE";
        console.log(subinvSection.hidden);
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
