@model IEnumerable<TechInvMgmt.Models.Employee>

@{
    ViewData["Title"] = "Remote Techs";
}


<div class="nav justify-content-center">
    <div style="width: 100%; text-align:center;">
        <h1 id="header">Remote Techs</h1>
    </div>
</div>


<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubinventoryId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.SubinventoryId != null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm text-dark" asp-action="Edit" asp-controller="Employees" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.SubinventoryId)
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>





<div class="nav justify-content-center">
    <div style="width: 100%; text-align:center;">
        <h1 id="header">Inventory Specialists</h1>
    </div>
</div>


<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.SubinventoryId == null && item.FirstName != null)
            {
                <tr>
                    <td>
                        <a class="btn btn-warning btn-sm text-dark" asp-action="Edit" asp-controller="Employees" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>