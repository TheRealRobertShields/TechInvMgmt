@model IEnumerable<TechInvMgmt.Models.Inventory>
@using Microsoft.AspNetCore.Identity
@inject UserManager<Employee> UserManager

@{
    ViewData["Title"] = "Index";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">@TempData["Message"]</div>
}


<div class="nav justify-content-center" style="width: 100%; text-align:center;">
    <h1 id="header">Inventory</h1>
    <a class="text-dark hvr-icon-pulse" asp-controller="Inventory" asp-action="Create">
        <div class="btn" style="color:green;">
            <img class="nav-icon fa fa-home hvr-icon" src="~/img/AddGrn.png" /> Add
        </div>
    </a>
</div>


<table id="tableOfStuff" class="display compact cell-border">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubinventoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubinventoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartId)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm text-dark" asp-action="Edit" asp-route-id="@item.InventoryId">
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



