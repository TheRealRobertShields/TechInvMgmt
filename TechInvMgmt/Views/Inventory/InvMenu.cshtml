

@{
    ViewData["Title"] = "Inventory Menu";
}


<div class="justify-content-center" style="width: 100%; text-align:center;">
    <h1>Inventory</h1>
    <h3>What would you like to do?</h3>
    @if (User.IsInRole("Tech"))
    {
        <div class="form-group">
            <a class="btn btn-lg hvr-icon-bob" asp-action="Index" asp-controller="Inventory" style="width: 70%; background-color:#d9cab3;"><img class="nav-icon fa fa-smile-o hvr-icon" src="~/img/MyInv.png" /><div class="text-light" id="myInv">My Subinventory</div></a>
        </div>
    }
    <div class="form-group">
        <a class="btn btn-info btn-lg hvr-icon-bob" asp-action="Index" asp-controller="Inventory" style="width: 70%;"><img class="nav-icon fa fa-smile-o hvr-icon" src="~/img/List.png" /><div class="text-light">View Inventory</div></a>
    </div>
    <div class="form-group">
        <a class="btn btn-success btn-lg hvr-icon-bob" asp-action="Create" asp-controller="Inventory" style="width: 70%;"><img class="nav-icon fa fa-smile-o hvr-icon" src="~/img/Pencil.png" /><div class="text-light">Add to Inventory</div></a>
    </div>


</div>


<script>
    var subinv = document.getElementById("getSubInv").innerText;
    document.getElementById("myInv").innerText = subinv;
</script>