@model TechInvMgmt.Models.Part

@{
    ViewData["Title"] = "Create";
}
<div class="justify-content-center" style="width:100%; text-align:center;">
    <h1>Create</h1>
    <h4>Part</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PartId" class="control-label"></label>
                    <input asp-for="PartId" class="form-control" />
                    <span asp-validation-for="PartId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartName" class="control-label"></label>
                    <input asp-for="PartName" class="form-control" />
                    <span asp-validation-for="PartName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartDescription" class="control-label"></label>
                    <input asp-for="PartDescription" class="form-control" />
                    <span asp-validation-for="PartDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartCategory" class="control-label"></label>
                    <input asp-for="PartCategory" class="form-control" />
                    <span asp-validation-for="PartCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartIsSerialized"></label><br />
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-secondary btn-lg">
                            <input asp-for="PartIsSerialized" value="True" class="form-control" type="radio" autocomplete="off">Yes
                        </label>
                        <label class="btn btn-secondary btn-lg">
                            <input asp-for="PartIsSerialized" value="False" class="form-control" type="radio" autocomplete="off">No
                        </label>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="PartIsSerialized" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
</form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
