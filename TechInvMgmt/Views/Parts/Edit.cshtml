@model TechInvMgmt.Models.Part

@{
    ViewData["Title"] = "Edit";
}
<div class="justify-content-center" style="width:100%; text-align:center;">
    <h1>@Model.PartName</h1>
    <h4>@Model.PartId</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PartId" />
                <div class="form-group">
                    <label asp-for="PartName" class="control-label"></label>
                    <input asp-for="PartName" class="form-control" />
                    <span asp-validation-for="PartName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartDescription" class="control-label"></label>
                    <input asp-for="PartDescription" class="form-control" />
                    <span asp-validation-for="PartDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartCategory" class="control-label"></label>
                    <input asp-for="PartCategory" class="form-control" />
                    <span asp-validation-for="PartCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PartIsSerialized" class="control-label"></label>
                    <input asp-for="PartIsSerialized" class="form-control" />
                    <span asp-validation-for="PartIsSerialized" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.PartId">Delete</a>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
