@model IEnumerable<TechInvMgmt.Models.SerialNumber>

@{
    ViewData["Title"] = "Index";
}

    <div style="width: 100%; text-align:center;">
        <h1 id="header" class="serialNumHeaders">Serial Numbers</h1>
    </div>


<table id="tableOfStuff" class="display compact cell-border hover" style="text-align:center;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SerialNumberId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubinventoryId)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="hvr-forward">
            <td style="background-color:#858f9b;">
                <a class="btn" asp-action="Edit" asp-route-id="@item.SerialNumberId" style="width:100%;color:wheat;">
                    @Html.DisplayFor(modelItem => item.SerialNumberId)
                </a>
            </td>
            <td style="background-color:#ccac88;">
                <a class="btn" asp-action="Edit" asp-route-id="@item.SerialNumberId" style="width:100%;">
                    @Html.DisplayFor(modelItem => item.PartId)
                </a>
            </td>
            <td style="background-color:#80558c;">
                <a class="btn" asp-action="Edit" asp-route-id="@item.SerialNumberId" style="width:100%;color:wheat;">
                    @Html.DisplayFor(modelItem => item.SubinventoryId)
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
<script>
    document.body.style.backgroundImage = "url(/img/HopperDuos.jpg)"
    document.body.style.backgroundSize = "cover";
    document.body.style.backgroundPosition = "center";
</script>