<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechInvMgmt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/lux-css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css" type="text/css" />-->
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/Hover/hover-min.css" />

</head>
<body id="theBody">
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg box-shadow" style="background-color:white;padding: 0.5rem;">
            <div class="container">
                <a class="navbar-brand hvr-skew" asp-area="" asp-controller="Home" asp-action="Index">Tech<wbr>Inv<wbr>Mgmt</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon" style="background-image:url(/img/HamburgerMenu.png);"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex flex-lg-row-reverse">
                    <partial name="_LoginPartial" />
                    <!--Only show nav links to other views if user is authenticated -->
                    @if (User.Identity.IsAuthenticated)
                    {
                <ul class="navbar-nav flex-grow-1">

                    <li class="nav-item dropdown" style="width:fit-content;">
                        <div class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <a class="nav-link text-dark hvr-bob" style="text-align:center;"><img class="nav-icon" src="~/img/NumberedList.png" style="height:35px;"/> Tables</a>
                        </div>
                        <ul class="dropdown-menu" style=" margin-top: 2px; padding: 10px; width: 200px; box-shadow: 0px 12px 15px -5px #000000; background-color: #ffffff;">
                            <li><a class="nav-link btn hvr-forward" asp-action="Index" asp-controller="Parts" style="text-align: left;"><img class="nav-icon" src="~/img/Parts.png" style="height:24px;" /><div class="text-dark"> Parts </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Index" asp-controller="SerialNumbers" style="text-align: left;"><img class="nav-icon" src="~/img/Barcode.png" style="height:24px;" /><div class="text-dark"> Serial Numbers </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Index" asp-controller="Inventory" style="text-align: left;"><img class="nav-icon" src="~/img/Inventory.png" style="height:24px;" /><div class="text-dark"> Inventory </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Index" asp-controller="Subinventories" style="text-align: left;"><img class="nav-icon" src="~/img/Van.png" style="height:24px;" /><div class="text-dark"> Subinventories </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Index" asp-controller="Employees" style="text-align: left;"><img class="nav-icon" src="~/img/Employees.png" style="height:24px;" /><div class="text-dark"> Employees </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="ReplenishList" asp-controller="Inventory" style="text-align: left;"><img class="nav-icon" src="~/img/Employees.png" style="height:24px;" /><div class="text-dark"> Replenish </div></a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown" style="width:fit-content;">
                        <div class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <a class="nav-link text-dark hvr-bob" style="text-align:center;"><img class="nav-icon" src="~/img/PlusLined.png" style="height:35px;"/> Add</a>
                        </div>
                        <ul class="dropdown-menu" style=" margin-top: 2px; padding: 10px; width: 200px; box-shadow: 0px 12px 15px -5px #000000; background-color: #ffffff;">
                            <li><a class="nav-link btn hvr-forward" asp-action="Create" asp-controller="Parts" style="text-align: left;"><img class="nav-icon" src="~/img/Parts.png" style="height:24px;" /><div class="text-dark"> Part </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Create" asp-controller="SerialNumbers" style="text-align: left;"><img class="nav-icon" src="~/img/Barcode.png" style="height:24px;" /><div class="text-dark"> Serial Number </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Create" asp-controller="Inventory" style="text-align: left;"><img class="nav-icon" src="~/img/Inventory.png" style="height:24px;" /><div class="text-dark"> Inventory </div></a></li>
                            <li><a class="nav-link btn hvr-forward" asp-action="Create" asp-controller="Subinventories" style="text-align: left;"><img class="nav-icon" src="~/img/Van.png" style="height:24px;" /><div class="text-dark"> Subinventory </div></a></li>
                            <li><a class="nav-link btn hvr-forward" href="https://techinvmgmt.azurewebsites.net/Identity/Account/Register" style="text-align: left;"><img class="nav-icon" src="~/img/Register.png" style="height:24px;" /><div class="text-dark"> Employee </div></a></li>

                        </ul>
                    </li>





                </ul>
                    }
                </div>
            </div>
        </nav>
    </header>


    <div class="bodyContainer">
        <main role="main" class="pb-3" style="padding-top:30px;">
            @RenderBody()
        </main>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Make HTML select/input elements Searchable dropdown lists -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <!-- DATATABLES -->
    <link rel="stylesheet" type="text/css" href="~/css/datatables-css/datatables-css.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.21/r-2.2.4/datatables.min.js"></script>

    <!-- toggle -->
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
