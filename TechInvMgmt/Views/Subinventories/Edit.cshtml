@model TechInvMgmt.Models.Subinventory
@inject TechInvMgmt.Data.ApplicationDbContext context
@{
    ViewData["Title"] = "Edit";
    List<Employee> employees = await TechInvMgmt.Data.EmployeeDb.GetEmployeesAsync(context);
}
<div class="justify-content-center" style="width:100%; text-align:center;">
    <h1>@Model.SubinventoryId</h1>
    <h4>@Model.EmployeeId</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SubinventoryId" />
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="searchDropdown" id="selectEmployee" style="width:100%;">
                        <option selected disabled>Select Employee</option>
                        <option>NONE</option>
                        @foreach (Employee e in employees)
                        {
                            <option value="@e.Id">@e.ToString()</option>
                        }
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div >
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.SubinventoryId">Delete</a>
                </div>
            </form>
        </div>
    </div>
    <div class="form-group" style="background-color: lightseagreen; padding: 5px; margin: 10px auto; width: fit-content; border: 1px solid black; border-radius: 40px;">
        <a class="hvr-backward" asp-action="Index"><img src="~/img/LeftArrow.png" style="height:50px;" /></a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
