@model IEnumerable<TechInvMgmt.Models.Subinventory>

@{
    ViewData["Title"] = "Index";
}

<h1>Subinventories</h1>


@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("ISP") || User.IsInRole("FSM") || User.IsInRole("Admin"))
    {
        <p>
            <a asp-action="Create">New Subinventory</a>
        </p>
    }
}

<table id="tableOfStuff" class="display compact cell-border table table-responsive-lg">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Subinv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedTech)
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                if (User.IsInRole("ISP") || User.IsInRole("FSM") || User.IsInRole("Admin"))
                {
                    <th></th>
                }
                else
                {

                }
            }

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Subinv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedTech)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("ISP") || User.IsInRole("FSM") || User.IsInRole("Admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Subinv">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Subinv">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Subinv">Delete</a>
                        </td>
                    }
                    else
                    {

                    }
                }
            </tr>
        }
    </tbody>
</table>
