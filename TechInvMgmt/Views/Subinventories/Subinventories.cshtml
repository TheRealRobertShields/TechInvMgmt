@model IEnumerable<TechInvMgmt.Models.Employee>

@{
    ViewData["Title"] = "Subinventories";
}

<h1>Remote Techs</h1>
<!--
    <p>
        <a asp-action="Create">Create New</a>
    </p>
-->
<table class="table table-sm table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subinventory)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Subinventory != null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm text-dark" asp-action="SubinventoriesEdit" asp-controller="Subinventories" asp-route-id="@item.Id">
                            @Html.DisplayFor(modelItem => item.Subinventory)
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script>$(document).ready(function () {
        $('#mmmm').DataTable();
    });</script>
